package javaString;

public class Mutable1 {
	public static void main(String[] args) {
		StringBuffer s1 =new StringBuffer();
		System.out.println(s1.capacity());
		s1.append(("The value of pie is ::"));
		s1.append(3.1414);
		s1.append(true);
		System.out.println(s1);
		System.out.println(s1.capacity());
		System.out.println(s1.length());
		
		  
	}

}
 